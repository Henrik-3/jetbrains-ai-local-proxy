<!-- File: src/main/resources/META-INF/plugin.xml -->
<idea-plugin>
    <id>com.hdev.ollamaproxy</id>
    <name>Ollama Proxy</name>
    <version>1.0.0</version>
    <vendor email="support@example.com" url="https://example.com">Example Vendor</vendor>

    <description><![CDATA[
    A proxy plugin that allows JetBrains AI to connect to various OpenAI-compatible services (like OpenWebUI, OpenRouter) by presenting an Ollama-compatible interface.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="com.hdev.ollamaproxy.settings.ProxySettingsConfigurable"
                id="com.hdev.ollamaproxy.settings.ProxySettingsConfigurable"
                displayName="Ollama Proxy"/>

        <applicationService
                serviceInterface="com.hdev.ollamaproxy.settings.ProxySettingsState"
                serviceImplementation="com.hdev.ollamaproxy.settings.ProxySettingsState"/>

        <applicationService
                serviceInterface="com.hdev.ollamaproxy.server.ProxyServer"
                serviceImplementation="com.hdev.ollamaproxy.server.ProxyServer"/>
    </extensions>

    <actions>
        <action id="StartOllamaProxyServer" class="com.hdev.ollamaproxy.actions.StartServerAction" text="Start Ollama Proxy">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="StopOllamaProxyServer" class="com.hdev.ollamaproxy.actions.StopServerAction" text="Stop Ollama Proxy">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

    <project-components>
        <component>
            <implementation-class>com.hdev.ollamaproxy.OllamaProxyProjectComponent</implementation-class>
        </component>
    </project-components>

</idea-plugin>